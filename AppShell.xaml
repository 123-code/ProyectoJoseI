<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoJoseI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProyectoJoseI"
    xmlns:v="clr-namespace:ProyectoJoseI.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Listar"
        ContentTemplate="{DataTemplate v:ListadoAlumnos}"
        Route="ListadoAlumnos" />
    <ShellContent
        Title="Nuevo alumno"
        ContentTemplate="{DataTemplate v:Alumno}"
        Route="Alumno" />



</Shell>
